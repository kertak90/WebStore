@{
    ViewData["Title"] = "Список рабочих";
}

@model IEnumerable<WebStore.Models.Employee>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewpoint" content="width=device-width" charset="utf-8" />
    <title>Index</title>
</head>
<body>
    <p>Привет из представления</p>
    <table class="table">
        <tr>
            <td>Имя</td>
            <td>Фамилия</td>
            <td>Отчество</td>
            <td>Возраст</td>            
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.SurName</td>
                <td>@item.Patronomic</td>
                <td>@item.Age</td>
                <td>@Html.ActionLink("Детали", "Details", new { id = item.Id })</td>
            </tr>
        }
    </table>
</body>
</html>
