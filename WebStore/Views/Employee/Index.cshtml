@{
    ViewData["Title"] = "Список рабочих";
    var isAdmin = User.IsInRole("Admin");
}

@model IEnumerable<WebStore.Models.Employee>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewpoint" content="width=device-width" charset="utf-8" />
    <title>Index</title>
</head>
<body>
    <p>Привет из представления</p>
    <table class="table">
        <tr>
            <td>Имя</td>
            <td>Фамилия</td>
            <td>Отчество</td>
            <td>Возраст</td>            
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.SurName</td>
                <td>@item.Patronomic</td>
                <td>@item.Age</td>
                <td>@Html.ActionLink("Детали", "Details", new { id = item.Id })</td>
                @if (isAdmin)
                {
                    <td><a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a></td>
                    <td><a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-cut"></i></a></td>
                }
            </tr>
        }
    </table>
    <hr />
    @if(isAdmin)
    {
        <a asp-action="Edit" class="btn btn-success">Добавить</a>
    }
</body>
</html>
