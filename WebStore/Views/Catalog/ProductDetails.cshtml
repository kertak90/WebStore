@using WebStore.ViewModels
@model ProductViewModel
@{
    ViewData["Title"] = "Товар: " + Model.Name;
}

<section id="advertisement">
    <div class="container">
        <img src="~/images/shop/advertisement.jpg" alt="" />
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">


                    <!--await Html.PartialAsync("Partial/_CategoryProducts")-->
                    @*@await Component.InvokeAsync("Sections")
                    @await Html.PartialAsync("Partial/_BrandsProducts")*@
                    <vc:sections />
                    <vc:brands />

                    <div class="price-range">
                        <!--price-range-->
                        <h2>Price Range</h2>
                        <div class="well">
                            <input type="text" class="span2" value="" data-slider-min="0" data-slider-max="600" data-slider-step="5" data-slider-value="[250,450]" id="sl2"><br />
                            <b>$ 0</b> <b class="pull-right">$ 600</b>
                        </div>
                    </div><!--/price-range-->

                    <div class="shipping text-center">
                        <!--shipping-->
                        <img src="~/images/home/shipping.jpg" alt="" />
                    </div><!--/shipping-->

                </div>
            </div>

            <div class="col-sm-9 padding-right">
                @await Html.PartialAsync("Partial/_FeatureItems");
            </div>
        </div>
    </div>
</section>